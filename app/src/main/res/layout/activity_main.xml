<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/overlayImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/viewFinder"
        app:layout_constraintBottom_toBottomOf="@id/viewFinder"
        app:layout_constraintStart_toStartOf="@id/viewFinder"
        app:layout_constraintEnd_toEndOf="@id/viewFinder" />

    <RelativeLayout
        android:id="@+id/startScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:letterSpacing="0.1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:text="START"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/btn_rounded_cyan"
            android:stateListAnimator="@animator/btn_press_anim"
            android:layout_below="@id/loadingText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-100dp"
            android:elevation="15dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by Nithish"
            android:textColor="#888888"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/btnExit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="X"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSwitchCamera"
        android:layout_width="56dp"
        android:layout_height="56dp"

        app:cornerRadius="28dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"

        android:background="@drawable/border_round"
        app:backgroundTint="@null"

        app:icon="@drawable/flip_cam"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="28dp"
        app:iconTint="@android:color/white"

        android:layout_marginStart="20dp"
        android:layout_marginTop="1000dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/> <!-- left side constraint -->






</androidx.constraintlayout.widget.ConstraintLayout>